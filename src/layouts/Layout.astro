---
import "../styles/global.css";

const navigation = [
	{ title: "Home", href: "/" },
	{ title: "Blogs", href: "/blogs" },
	{ title: "Worklog", href: "/worklog" },
	{ title: "Projects", href: "/projects" },
];
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{Astro.props.title}</title>
	</head>
	<body class="terminal-scanlines bg-zinc-900 min-h-screen text-gray-900 font-mono">
		<main class="max-w-xl mx-auto px-4 py-8">
			<header class="text-sm">
				{navigation.map(({title, href}) => (
					<a href={href} class={`text-zinc-400 pr-4 hover:text-zinc-300 ${Astro.url.pathname === href ? "font-extrabold " : ""}`}>{title}</a>
				))}
			</header>
			<slot />
		</main>
	</body>
</html>
